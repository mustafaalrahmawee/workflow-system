# ===========================================
# Workflow System â€“ Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
# For local development (without Docker):
# DATABASE_URL="postgresql://username:password@localhost:5432/workflow_db?schema=public"

# For Docker Compose:
DATABASE_URL="postgresql://postgres:postgres@db:5432/workflow_db?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=workflow_db

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
JWT_EXPIRES_IN="15m"

JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-chars"
JWT_REFRESH_EXPIRES_IN="7d"

# -------------------------------------------
# Application
# -------------------------------------------
PORT=3000
NODE_ENV=development

# For Angular app to connect to API:
API_URL=http://localhost:3000

# -------------------------------------------
# Optional: Logging
# -------------------------------------------
LOG_LEVEL=debug
# LOG_FORMAT=json

# -------------------------------------------
# Optional: Rate Limiting
# -------------------------------------------
# RATE_LIMIT_TTL=60
# RATE_LIMIT_MAX=100
