generator client {
  provider   = "prisma-client"
  output     = "./generated/client"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  APPLICANT
  REVIEWER
  ADMIN
}

model User {
  id              String    @id @default(uuid()) @map("user_id")
  email           String    @unique
  firstName       String?   @map("first_name")
  lastName        String?   @map("last_name")
  phoneNumber     String?   @map("phone_number")
  passwordHash    String    @map("password_hash")
  role            Role      @default(APPLICANT)
  isEmailVerified Boolean   @default(true) @map("is_email_verified")
  isActive        Boolean   @default(true) @map("is_active")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  deletedAt       DateTime? @map("deleted_at")

  refreshTokens   RefreshToken[]

  @@map("users")
}

model RefreshToken {
  id          String   @id @default(uuid())
  token       String   @unique        // Hash des Tokens
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  deviceInfo  String?                 // Optional: Browser/Device
  ipAddress   String?                 // Optional: IP-Adresse
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  revokedAt   DateTime?               // Null = aktiv, Datum = revoked

  @@map("refresh_tokens")
}